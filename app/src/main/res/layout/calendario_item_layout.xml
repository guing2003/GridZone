                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/imagem_padrao" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
