<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagem_piloto_detalhe_piloto_activity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagem_padrao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_piloto_detalhes_piloto_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nome do Piloto"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/imagem_piloto_detalhe_piloto_activity"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equipe_piloto_detalhe_piloto_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipe do Piloto"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/nome_piloto_detalhes_piloto_activity"
                app:layout_constraintTop_toBottomOf="@id/nome_piloto_detalhes_piloto_activity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero do piloto"
                android:textSize="14sp"

                app:layout_constraintStart_toStartOf="@id/equipe_piloto_detalhe_piloto_activity"
                app:layout_constraintTop_toBottomOf="@id/equipe_piloto_detalhe_piloto_activity" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>